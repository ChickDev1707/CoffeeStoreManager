<Window x:Class="CoffeeStoreManager.Views.ManageFood.UpdateFoodWindow"
        x:Name="updateFoodWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        
        xmlns:local="clr-namespace:CoffeeStoreManager.Views.ManageFood"
        xmlns:ManageFoodUC="clr-namespace:CoffeeStoreManager.Views.ManageFood.Controls"
        WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource FoodVM}"
        mc:Ignorable="d"
        Title="UpdateFoodWindow" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Margin="0 0 0 30" Text="Update food" FontSize="30"/>
            <ManageFoodUC:UpdateFoodForm/>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0 20 0 0">
                <Button Command="{Binding UpdateSelectedFood}" CommandParameter="{Binding ElementName=updateFoodWind}" Content="Update" Margin="0 0 15 0"></Button>
                <Button Content="Cancel"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
