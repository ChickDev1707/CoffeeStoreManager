<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeeStoreManager.Views.ManageEmployee"
      xmlns:ManageEmployeeUC="clr-namespace:CoffeeStoreManager.Views.ManageEmployee.Controls"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="CoffeeStoreManager.Views.ManageEmployee.ManageEmployeeMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageEmployeeMain"
      DataContext="{StaticResource ManageEmployeeVM}"
      >

    <Grid>
        <TabControl >
            <TabItem Header="nhan vien" IsSelected="{Binding IsSelectedTab}">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="0 15" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Padding" Value="15 5"/>
                                <Setter Property="Margin" Value="0 0 10 0"/>
                            </Style>
                        </StackPanel.Resources>
                        <Button Command="{Binding OpenAddEmployee}" Content="Add"/>
                        <Button Command="{Binding OpenUpdateEmployee}" Content="Update"/>
                        <Button Command="{Binding DeleteEmployee}" Content="Delete"/>
                        <Button Command="{Binding OpenSalaryWindow}" Content="Salary"/>
                        <Button x:Name="k" Command="{Binding IncAbsentDay}" CommandParameter="{Binding ElementName=k k}" Content="++"/>
                        <Button Command="{Binding DecAbsentDay}" Content="--"/>
                        <!--<Button Command="{Binding RefreshFoodList}" Content="Refresh"/>-->

                    </StackPanel>
                    <ListView  Grid.Row="1" ItemsSource="{Binding EmployeeList}" SelectedItem="{Binding SelectedNhanVien}" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="STT" DisplayMemberBinding="{Binding STT}"/>
                                <GridViewColumn Header="Ho va ten" DisplayMemberBinding="{Binding ho_ten}"/>
                                <GridViewColumn Header="SDT" DisplayMemberBinding="{Binding sdt}"/>
                                <GridViewColumn Header="Dia chi" DisplayMemberBinding="{Binding dia_chi}"/>
                                <GridViewColumn Header="So ngay nghi" DisplayMemberBinding="{Binding so_ngay_nghi}"/>
                                <GridViewColumn Header="Loai nhan vien" DisplayMemberBinding="{Binding loai_nhan_vien}"/>
                                <GridViewColumn Header="Tien luong" DisplayMemberBinding="{Binding tien_luong}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Loai nhan vien">
                <ManageEmployeeUC:AddEmployeeType/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
