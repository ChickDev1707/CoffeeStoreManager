<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeeStoreManager.Views.ManageEmployee"
      xmlns:ManageEmployeeUC="clr-namespace:CoffeeStoreManager.Views.ManageEmployee.Controls"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="CoffeeStoreManager.Views.ManageEmployee.ManageEmployeeMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageEmployeeMain"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      DataContext="{StaticResource ManageEmployeeVM}"
      >

    <Grid>
        <TabControl >
            <TabItem Header="nhan vien" IsSelected="{Binding IsSelectedTab}">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="0 15" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Padding" Value="15 5"/>
                                <Setter Property="Margin" Value="0 0 10 0"/>
                            </Style>
                        </StackPanel.Resources>
                        <TextBox Name="txb" Width="300" Margin="0 4 15 4">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="KeyUp">
                                    <i:InvokeCommandAction Command="{Binding Find}" CommandParameter="{Binding ElementName=txb}">

                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                        <Button Command="{Binding OpenAddEmployee}" Content="Add"/>
                        <Button Command="{Binding OpenUpdateEmployee}" Content="Update"/>
                        <Button Command="{Binding DeleteEmployee}" Content="Delete"/>
                        <Button Command="{Binding OpenSalaryWindow}" Content="Salary"/>
                        <Button x:Name="k" Command="{Binding IncAbsentDay}" CommandParameter="{Binding ElementName=k k}" Content="++"/>
                        <Button Command="{Binding DecAbsentDay}" Content="--" RenderTransformOrigin="4.619,0.517"/>

                    </StackPanel>

                    <ListView  SelectionMode="Multiple"   Name="lv" Grid.Row="1" ItemsSource="{Binding EmployeeList}" SelectedItem="{Binding SelectedNhanVien}" >

                        <i:Interaction.Triggers>
                            <!-- Thay doi su xuat hien cua checkbox-->

                            <!--<i:EventTrigger EventName="MouseDoubleClick" >
                                <i:InvokeCommandAction 
                                        Command="{Binding  CheckListItem}"
                                        CommandParameter="{Binding ElementName=lv, Path = SelectedItem}"/>
                            </i:EventTrigger>-->



                            <i:EventTrigger EventName="SelectionChanged" >
                                <i:InvokeCommandAction 
                                        Command="{Binding CheckItem}" 
                                    CommandParameter="{Binding ElementName=lv,Mode=OneWay}"
                                    >
                                </i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="{Binding WidthCheckCol}">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <CheckBox x:Name="cb"  IsChecked="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType=ListViewItem},Path=IsSelected}" >
                                                    <!--<i:Interaction.Triggers>
                                                        <i:EventTrigger  EventName ="MouseDoubleClick" >
                                                            <i:ChangePropertyAction  
                                                                    PropertyName="IsChecked" Value=" False"
                                                            >
                                                            </i:ChangePropertyAction>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>-->
                                                </CheckBox>
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                    <Grid>
                                        <CheckBox Visibility="Hidden">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged" >
                                                    <i:InvokeCommandAction 
                                                            Command="{Binding CheckItem}" 
                                                            CommandParameter= "{Binding ElementName =lv,Mode=OneWay}"
                                                            >
                                                    </i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </CheckBox>
                                    </Grid>
                                </GridViewColumn>
                                <GridViewColumn  Header="STT" DisplayMemberBinding="{Binding STT}">
                                </GridViewColumn>
                                <GridViewColumn Header="Ho va ten" DisplayMemberBinding="{Binding ho_ten}"/>
                                <GridViewColumn Header="SDT" DisplayMemberBinding="{Binding sdt}"/>
                                <GridViewColumn Header="Dia chi" DisplayMemberBinding="{Binding dia_chi}"/>
                                <GridViewColumn Header="So ngay nghi" DisplayMemberBinding="{Binding so_ngay_nghi}"/>
                                <GridViewColumn Header="Loai nhan vien" DisplayMemberBinding="{Binding loai_nhan_vien}"/>
                                <GridViewColumn Header="Tien luong" DisplayMemberBinding="{Binding tien_luong}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Loai nhan vien">
                <ManageEmployeeUC:AddEmployeeType/>
            </TabItem>
        </TabControl>
    </Grid>


</Page>