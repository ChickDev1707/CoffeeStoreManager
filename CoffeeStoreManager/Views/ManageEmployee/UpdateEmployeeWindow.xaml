<Window x:Class="CoffeeStoreManager.Views.ManageEmployee.UpdateEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeStoreManager.Views.ManageEmployee" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource ManageEmployeeVM}"
        Title="UpdateEmployeeWindow" Height="550" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Margin="0 0 0 30" Text="Update food" FontSize="30"/>
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Margin" Value="0 0 0 10"/>
                    </Style>
                    <Style TargetType="Button">
                        <Setter Property="Padding" Value="10 5"/>
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="Ten nhan vien: "/>
                <TextBox Text="{Binding SelectedNhanVien.ho_ten}"/>
                <TextBlock Text="SDT: "/>
                <TextBox Text="{Binding SelectedNhanVien.sdt}"/>
                <TextBlock Text="Dia chi: "/>
                <TextBox Text="{Binding SelectedNhanVien.dia_chi}"/>
                <TextBlock Text="Ngay vao lam "/>
                <DatePicker SelectedDate="{Binding SelectedNhanVien.ngay_vao_lam}"/>

                <TextBlock Text="Loai nhan vien: "/>
                <ComboBox  
                    ItemsSource="{Binding EmployeeTypeList}" 
                    DisplayMemberPath="ten_loai_nhan_vien"
                    SelectedValuePath="ma_loai_nhan_vien"

                    SelectedValue="{Binding SelectedNhanVien.ma_loai_nhan_vien}">
                </ComboBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0 20 0 0">
                <Button Content="Update" Margin="0 0 15 0" Command="{Binding UpdateEmployee}">
                </Button>
                <Button Content="Cancel">
                   
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
