<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeStoreManager" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="CoffeeStoreManager.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1150"
        DataContext="{StaticResource MainVM}"
        x:Name="mainWindow">
    <Window.Resources>
        <ResourceDictionary Source="./Views/Style/Button.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Command="{Binding LoadedWindowCommand}" VerticalAlignment="Center" CommandParameter="{Binding ElementName=mainWindow}" Header="Admin" FontSize="14"/>
            <MenuItem Header="Help" VerticalAlignment="Center" FontSize="14"/>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 10">
                        <Image Source="./Resources/Assets/Images/coffee-shop-icon.png" Width="50" Height="50" Margin="0 0 10 0"/>
                        <TextBlock Text="Quản lý quán cafe" FontWeight="Bold" FontSize="26" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Rectangle Fill="Gray" Height="2" Margin="0 0 0 10"/>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <Label Content="Danh sách bàn của quán" FontSize="20" Margin="10 0 0 5"/>
                    <WrapPanel >
                        <Button x:Name="btnTable1" Height="99" Width="101" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable1}" Background="White" Foreground="Black"  >
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 1" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnTable2" Height="99" Width="99" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable2}" Background="White" Foreground="Black">
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 2" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnTable3" Height="99" Width="101" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable3}" Background="White" Foreground="Black">
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 3" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnTable4" Height="99" Width="101" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable4}" Background="White" Foreground="Black">
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 4" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnTable5" Height="99" Width="99" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable5}" Background="White" Foreground="Black">
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 5" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnTable6" Height="99" Width="101" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable6}" Background="White" Foreground="Black">
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 6" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnTable7" Height="98" Width="101" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable7}" Background="White" Foreground="Black">
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 7" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnTable8" Height="98" Width="99" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable8}" Background="White" Foreground="Black">
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 8" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnTable9" Height="98" Width="101" Margin="13" Command="{Binding ChooseTableCommand}" CommandParameter="{Binding ElementName=btnTable9}" Background="White" Foreground="Black">
                            <StackPanel Orientation="Vertical" Height="62" Width="66" >
                                <Image Margin="0" Width="28" Height="28" Source="/Resources/Images/coffee-table.png" HorizontalAlignment="Center"/>
                                <TextBlock  FontWeight="Bold" VerticalAlignment="Center" Text="Bàn 9" Foreground="Black" FontSize="20" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>

                </StackPanel>
            </Grid>
            <Border Grid.Column="1" Style="{StaticResource MainBorder}">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <DockPanel HorizontalAlignment="Right" Margin="0 10 20 10">
                            <Label  Content="Bàn số:" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" 
                                FontSize="14"/>
                            <Label  Content="{Binding number}" 
                                Padding="20 3"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                Background="#FFE5E5E5" 
                                FontSize="20"/>
                        </DockPanel>
                        <Grid Margin="20 0 20 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                                <StackPanel Width="150" Margin="0 0 20 0">
                                    <Label Content="Tên món ăn"/>
                                    <ComboBox 
                                        FontSize="14"
                                        materialDesign:HintAssist.Hint="Món ăn"
                                        DisplayMemberPath="ten_mon_an" 
                                        ItemsSource="{Binding MonAn}" 
                                        SelectedItem="{Binding SelectedMonAn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      />
                                </StackPanel>
                                <StackPanel>
                                    <Label Content="Số lượng"/>
                                    <syncfusion:UpDown Height="28" Width="100" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Style="{StaticResource PrimaryBtn}"  Command="{Binding AddCommand}" Content="Thêm món" Margin="0 0 15 0"/>
                                <Button Style="{StaticResource PrimaryBtn}" Command="{Binding DeleteCommand}" Content="Xóa"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <Border Grid.Row="1" Style="{StaticResource MainBorder}" BorderThickness="0 2 0 2">
                        <ListView ItemsSource="{Binding BillDetail}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                            <ListView.View >
                                <GridView>
                                    <GridViewColumn Header="Tên món" DisplayMemberBinding="{Binding ten_mon_an}" Width="300" />
                                    <GridViewColumn Header="Giá" DisplayMemberBinding="{Binding gia_tien}" Width="150"/>
                                    <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding so_luong}" Width="135"/>
                                    <GridViewColumn Header="Thành tiền" DisplayMemberBinding="{Binding thanh_tien}" Width="135"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                    <StackPanel Grid.Row="2" Margin="0 0 0 20">
                        <DockPanel HorizontalAlignment="Right" Margin="0 10 20 20">
                            <Label  Content="Tổng tiền:" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" 
                                FontSize="14"/>
                            <Label  Content="{Binding totalmoney}" 
                                Width="175"
                                Foreground="#ff3838"
                                Padding="20 3"
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                Background="#FFE5E5E5" 
                                FontSize="22"/>
                        </DockPanel>
                        <Grid Margin="20 0 20 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <ComboBox 
                                        materialDesign:HintAssist.Hint="Bàn trống"
                                        IsEditable="True"
                                        Width="80"
                                        DisplayMemberPath="emptytable" 
                                        ItemsSource="{Binding EmptyTables}" 
                                        SelectedItem="{Binding SelectedEmptyTable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        Margin="0 0 15 0"
                                        FontSize="14"/>
                                <Button Style="{StaticResource PrimaryBtn}" Command="{Binding ChangeTableCommand}" Content="Chuyển bàn"/>

                            </StackPanel>
                            <Button Grid.Column="1" Style="{StaticResource PrimaryBtn}" Command="{Binding CheckOutCommand}" Content="Thanh toán" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
